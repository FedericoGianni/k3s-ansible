apiVersion: "cilium.io/v2alpha1"
kind: CiliumL2AnnouncementPolicy
metadata:
  name: cilium-l2-policy
spec:
  serviceSelector:
    matchLabels:
      l2: "true" 
  nodeSelector: {}
  interfaces:
  - ^eth[0-9]+
  externalIPs: true
  loadBalancerIPs: true
---
apiVersion: "cilium.io/v2alpha1"
kind: CiliumLoadBalancerIPPool
metadata:
  name: "02-lb-pool"
spec:
  blocks:
{% if "/" in cilium_l2_lb_cidr %}
  - cidr: {{ cilium_l2_lb_cidr }}
{% else %}
  - start: {{ cilium_l2_lb_cidr.split('-')[0] }}
    stop: {{ cilium_l2_lb_cidr.split('-')[1] }}
{% endif %}
  serviceSelector:
    matchLabels:
      l2: "true"